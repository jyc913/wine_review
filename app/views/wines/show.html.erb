<% content_for :name, @wine.name %>
<article class="wine">
  <header>
    <h2><%= @wine.name %></h2>
  </header>
  <p><label>Author:</label> <%= @wine.name %></p>
  <p><label>Pages:</label> <%= @wine.year %></p>
  <p><label>Price:</label> <%= @wine.winery %></p>
  <p><label>Average log entries:</label> <%= format_average_ratings(@wine) %></p>
</article>

<%= link_to 'All Wines', wines_path %>
| <%= link_to 'Edit', edit_wine_path(@wine) %>
<%= button_to 'Delete', @wine,
               method: :delete,
               data: { confirm: 'Are you sure?' } %>
<p>
  Read all
  <%= link_to pluralize(@wine.log_entries.size, 'log_entry'), 
                        wine_log_entries_path(@wine) %>
</p>
